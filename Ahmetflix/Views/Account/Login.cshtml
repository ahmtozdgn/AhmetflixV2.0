@model Ahmetflix.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm login-card">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Giriş Yap</h2>
                        <p class="text-muted">Ahmetflix'e hoş geldiniz!</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="ornek@email.com">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input asp-for="Password" class="form-control" placeholder="••••••••">
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input">
                            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-0">Hesabınız yok mu? <a href="/Account/Register" class="text-primary">Kayıt Ol</a></p>
                        <p class="mb-0 mt-2"><a href="/Account/ForgotPassword" class="text-secondary">Şifremi Unuttum</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Montserrat:wght@400;700&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body, .login-card, .form-control, .btn, .input-group-text {
            font-family: 'Inter', 'Poppins', 'Montserrat', Arial, sans-serif;
        }
        .login-card {
            background: rgba(34, 34, 44, 0.85);
            color: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border: 1px solid rgba(255,255,255,0.10);
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .login-card:hover {
            box-shadow: 0 16px 48px rgba(0,0,0,0.25);
            transform: scale(1.02) translateY(-2px);
        }
        .input-group-text {
            background: #2a2a2a;
            border-color: #2a2a2a;
            color: #fff;
            font-size: 1.2rem;
        }
        .form-control {
            background: #2a2a2a;
            border-color: #2a2a2a;
            color: #fff;
            border-radius: 12px;
            font-size: 1.05rem;
        }
        .form-control:focus {
            background: #23232b;
            border-color: #0d6efd;
            color: #fff;
            box-shadow: 0 0 0 0.15rem rgba(13,110,253,0.10);
        }
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .form-check-input {
            background-color: #2a2a2a;
            border-color: #2a2a2a;
        }
        .btn-primary {
            background: #0d6efd;
            border-color: #0d6efd;
            font-weight: 600;
            border-radius: 14px;
            font-size: 1.1rem;
            box-shadow: 0 2px 8px rgba(13,110,253,0.08);
            transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        }
        .btn-primary:hover {
            background: #0056b3;
            border-color: #0056b3;
            box-shadow: 0 4px 16px rgba(13,110,253,0.18);
        }
        .login-card .form-label {
            font-weight: 600;
            color: #fff;
        }
        .login-card .input-group {
            box-shadow: 0 1px 4px rgba(0,0,0,0.08);
            border-radius: 12px;
        }
        .login-card .text-primary, .login-card .text-secondary {
            font-weight: 600;
        }
        .login-card .alert-danger {
            border-radius: 10px;
            background: rgba(220,53,69,0.08);
            color: #ffb3b3;
            border: none;
        }
        @@media (max-width: 576px) {
            .login-card { border-radius: 10px; padding: 1.2rem !important; }
            .input-group-text { font-size: 1rem; }
        }
        body.light-mode .login-card {
            background: rgba(255,255,255,0.95);
            color: #222;
        }
        body.light-mode .form-control, body.light-mode .input-group-text {
            background: #f1f3f6;
            color: #222;
            border-color: #e0e0e0;
        }
        body.light-mode .form-control:focus {
            background: #fff;
            color: #222;
        }
        body.light-mode .login-card .form-label {
            color: #222;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 