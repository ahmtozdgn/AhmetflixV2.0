@{
    ViewData["Title"] = "Confirm Email";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark text-white mt-5 shadow">
            <div class="card-body">
                <h2 class="mb-4 text-center"><i class="bi bi-envelope-check"></i> Confirm Email</h2>
                <div class="alert alert-info text-center">@ViewBag.Message</div>
                <div class="text-center mt-3">
                    <a href="/Account/Login" class="btn btn-primary">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div> 