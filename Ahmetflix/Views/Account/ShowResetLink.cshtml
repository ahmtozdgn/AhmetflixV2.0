@{
    ViewData["Title"] = "Şifre Sıfırlama Linki";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card bg-dark text-white mt-5">
            <div class="card-body">
                <h2 class="mb-4 text-center">Şifre Sıfırlama Linki</h2>
                <div class="alert alert-info">
                    <strong>Demo:</strong> Normalde bu link e-posta ile gönderilir.<br />
                    <a href="/Account/ResetPassword?userId=@ViewBag.UserId&token=@System.Net.WebUtility.UrlEncode(ViewBag.Token)">
                        Şifre Sıfırlama Linki
                    </a>
                </div>
                <div class="mt-3">
                    <label>Token:</label>
                    <textarea class="form-control" rows="3" readonly>@ViewBag.Token</textarea>
                </div>
            </div>
        </div>
    </div>
</div> 