@model Ahmetflix.Models.Movie
@{
    ViewData["Title"] = "Film Düzenle";
    var categories = ViewBag.Categories as List<Ahmetflix.Models.Category>;
}
<div class="container">
    <h2 class="mb-4">Film Düzenle</h2>
    <form asp-action="EditMovie" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TrailerUrl" class="form-label">Fragman URL</label>
            <input asp-for="TrailerUrl" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ReleaseDate" class="form-label">Yayın Tarihi</label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Duration" class="form-label">Süre (dk)</label>
            <input asp-for="Duration" type="number" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">IMDB</label>
            <input asp-for="Rating" type="number" step="0.1" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">Seçiniz</option>
                @foreach (var cat in categories ?? new List<Ahmetflix.Models.Category>())
                {
                    if (Model.CategoryId == cat.Id)
                    {
                        <option value="@cat.Id" selected>@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/Admin" class="btn btn-secondary">İptal</a>
    </form>
</div> 