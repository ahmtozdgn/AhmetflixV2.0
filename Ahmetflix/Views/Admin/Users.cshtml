@model IEnumerable<Ahmetflix.Models.AppUser>
@{
    ViewData["Title"] = "Kullanıcılar";
}
<div class="container">
    <h2 class="mb-4">Kullanıcılar</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th>Roller</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <!-- Roller burada gösterilecek, ileride eklenebilir -->
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 